.article {
  width: 100%;
  background-color: white;
  border: 1px solid #ccc;
  margin-top: 20rpx;
}

.article .username {
  width: 92%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx auto;
  border-bottom: 2px dashed #ccc;
  font-size: 22rpx;
}

.article .title {
  font-weight: bold;
  font-size: 40rpx;
  margin: 20rpx;
}

.article .content {
  margin: 20rpx;
  line-height: 60rpx;
  padding-bottom: 30rpx;
  border-bottom: 2px dashed #ccc;
  font-size: 28rpx;
}

.article image {
  width: 100%;
  margin: 0 auto;
}

.share-box {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  color: rgb(124, 124, 124);
  background-color: #ccc;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
  border-radius: 0 0 30rpx 30rpx;
}

.share-box .share image,
.reply image,
.likes image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.share-box .share,
.reply,
.likes {
  display: flex;
  justify-content: center;
  width: 190rpx;
  height: 50rpx;
}

.share button {
  padding: 0;
  margin: 0;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ccc;
  font-size: 22rpx;
  font-weight: 400;
  color: rgb(124, 124, 124);
}

.delete {
  border-bottom: 4rpx solid black;
  border-right: 4rpx solid black;
  background-color: white;
  margin: 20rpx;
  color: #D7000F;
  box-shadow: 10rpx 10rpx #d8d8c2;
}

.comment {
  height: 50rpx;
}